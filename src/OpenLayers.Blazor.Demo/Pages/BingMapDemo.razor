@page "/bingmapdemo"
<h3>BingMapDemo</h3>

<select @bind="_layerselect">
    <option value="Aerial">Aerial</option>
    <option value="AerialWithLabelsOnDemand">Aerial with labels</option>
    <option value="RoadOnDemand" selected>Road</option>
    <option value="CanvasDark">Road dark</option>
    <option value="OrdnanceSurvey">Ordnance Survey</option>
</select>

<div class="container">
    <BingMap Style="height:720px;" ImagerySet="@(_layerselect != null ? Enum.Parse<BingMapImagerySet>(_layerselect) : BingMapImagerySet.RoadOnDemand)" Key="Your Bing Maps Key from https://www.bingmapsportal.com/ here"></BingMap>
</div>

<CodeView Source="BingMapDemo.razor" />

@code {
    private string? _layerselect;
}
